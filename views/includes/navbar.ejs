<style>
  .search-btn {
    background-color: #fe424d;
    color: white; 
    border-radius: 1rem;
    padding: 0 1rem 0 1rem;
  }
  .search-btn:hover {
    background-color: #fe424d;
    color: white; 
  }
  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
