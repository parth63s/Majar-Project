        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Citiers</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Moutains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-fort-awesome"></i></div>
            <p>castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Comping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></i></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>
        
        <div class="tax-taggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>
    </div>
    <div class="row  row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%for(let listing of allListings) {%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br>
                            <i class="non-tax-info">&#8377; <%= listing.price ? (listing.price).toLocaleString("en-IN") : "N/A" %></i>
                            <i class="tax-info"> &#8377; <%= listing.price ? (listing.price + listing.price * 18 / 100).toLocaleString("en-IN") : "N/A" %></i>
                        </p>
                    </div>
                </div>
            </a>
            
        <%}%>
    </div>
    
    
</body>


<script>
let taxSwitch = document.getElementById("flexSwitchCheckDefault");

taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    let nonTaxInfo = document.getElementsByClassName("non-tax-info");
    
    // Convert HTMLCollection to array for easier manipulation
    Array.from(taxInfo).forEach(info => {
        info.style.display = taxSwitch.checked ? "inline" : "none";
    });
    
    Array.from(nonTaxInfo).forEach(info => {
        info.style.display = taxSwitch.checked ? "none" : "inline";
    });
});


</script>


